<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_20dp"
    tools:layout_gravity="end"
    tools:layout_width="400dp">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="Accessing University Services" />

    <TextView
        android:id="@+id/paragraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:layout_marginVertical="@dimen/_10dp"
        android:textSize="16sp"
        tools:text="Enjoy free drinks on all High Roller tables for the entire month of December. Applies to all venues. Book today." />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100dp"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:scaleType="fitStart"
        tools:src="@drawable/more_info_img" />
</LinearLayout>