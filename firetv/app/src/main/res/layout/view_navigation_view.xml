<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/brand_primary_color">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_40dp"
        android:focusable="false"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".1"
        tools:src="@drawable/ic_sports" />

    <TextView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/roboto_light"
        android:maxLines="1"
        android:text="@string/home"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <View
        android:id="@+id/home_border"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="2dp"
        android:background="@color/brand_secondary_color"
        app:layout_constraintEnd_toEndOf="@+id/home"
        app:layout_constraintStart_toStartOf="@+id/home"
        app:layout_constraintTop_toBottomOf="@+id/home"
        app:layout_constraintWidth_percent="0" />

    <TextView
        android:id="@+id/tv_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/roboto_light"
        android:maxLines="1"
        android:text="@string/tv_guide"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/home"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tv_guide_border"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="6dp"
        android:background="@color/brand_secondary_color"
        app:layout_constraintEnd_toEndOf="@+id/tv_guide"
        app:layout_constraintStart_toStartOf="@+id/tv_guide"
        app:layout_constraintTop_toBottomOf="@+id/tv_guide"
        app:layout_constraintWidth_percent="0" />

    <TextView
        android:id="@+id/on_demand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/roboto_light"
        android:maxLines="1"
        android:text="@string/on_demand"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_guide"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/on_demand_border"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="2dp"
        android:background="@color/brand_secondary_color"
        app:layout_constraintEnd_toEndOf="@+id/on_demand"
        app:layout_constraintStart_toStartOf="@+id/on_demand"
        app:layout_constraintTop_toBottomOf="@+id/on_demand"
        app:layout_constraintWidth_percent="0" />

    <TextView
        android:id="@+id/recordings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/roboto_light"
        android:maxLines="1"
        android:text="@string/recordings"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/on_demand"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/recordings_border"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="6dp"
        android:background="@color/brand_secondary_color"
        app:layout_constraintEnd_toEndOf="@+id/recordings"
        app:layout_constraintStart_toStartOf="@+id/recordings"
        app:layout_constraintTop_toBottomOf="@+id/recordings"
        app:layout_constraintWidth_percent="0" />


    <TextView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/roboto_light"
        android:maxLines="1"
        android:text="@string/search"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recordings"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/search_border"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="6dp"
        android:background="@color/brand_secondary_color"
        app:layout_constraintEnd_toEndOf="@+id/search"
        app:layout_constraintStart_toStartOf="@+id/search"
        app:layout_constraintTop_toBottomOf="@+id/search"
        app:layout_constraintWidth_percent="0" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/roboto_light"
        android:maxLines="1"
        android:text="@string/settings"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"
        android:nextFocusRight="@+id/settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/settings_border"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="6dp"
        android:background="@color/brand_secondary_color"
        app:layout_constraintEnd_toEndOf="@+id/settings"
        app:layout_constraintStart_toStartOf="@+id/settings"
        app:layout_constraintTop_toBottomOf="@+id/settings"
        app:layout_constraintWidth_percent="0" />

    <TextClock
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_light"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".16" />

</androidx.constraintlayout.widget.ConstraintLayout>