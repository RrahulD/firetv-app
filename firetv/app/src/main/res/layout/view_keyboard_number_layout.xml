        android:id="@+id/key_0"
        style="@style/Keyboard_number_keys"
        android:layout_marginEnd="@dimen/_5dp"
        android:layout_marginRight="@dimen/_5dp"
        android:text="@string/key_0"
        android:nextFocusUp="@id/key_0"
        android:nextFocusDown="@id/key_0"
        android:focusable="true"
        app:layout_constraintBaseline_toBaselineOf="@+id/key_9"
        app:layout_constraintEnd_toStartOf="@+id/key_delete"
        app:layout_constraintStart_toEndOf="@+id/key_9" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/key_delete"
        android:layout_width="@dimen/_35dp"
        android:layout_height="@dimen/_40dp"
        android:paddingStart="@dimen/_4dp"
        android:paddingEnd="@dimen/_4dp"
        android:paddingTop="@dimen/_2dp"
        android:paddingBottom="@dimen/_4dp"
        android:layout_marginStart="@dimen/_5dp"
        android:nextFocusUp="@id/key_delete"
        android:nextFocusDown="@id/key_delete"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/keyboard_btn_selector"
        android:src="@drawable/backspace"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/key_0" />

</androidx.constraintlayout.widget.ConstraintLayout>
