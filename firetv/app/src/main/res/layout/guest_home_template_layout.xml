<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/_40dp"
    android:weightSum="12">

    <tv.accedo.dishonstream2.ui.main.home.component.swimlane.SwimLane
        android:id="@+id/leftColumn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_8dp"
        android:layout_weight="5"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingVertical="@dimen/_8dp"
        app:swimLaneItemHeight="@dimen/_300dp" />

    <tv.accedo.dishonstream2.ui.main.home.component.swimlane.SwimLane
        android:id="@+id/centerColumn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_8dp"
        android:layout_weight="3.7"
        android:clipToPadding="false"
        android:paddingVertical="@dimen/_8dp"
        app:swimLaneItemHeight="@dimen/_230dp" />

    <tv.accedo.dishonstream2.ui.main.home.component.swimlane.SwimLane
        android:id="@+id/rightColumn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_8dp"
        android:layout_weight="3.3"
        android:clipToPadding="false"
        android:paddingVertical="@dimen/_8dp"
        app:swimLaneItemHeight="@dimen/_90dp" />
</LinearLayout>