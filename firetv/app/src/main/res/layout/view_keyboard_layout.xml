            android:text="@string/key_t" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/key_u"
            style="@style/Keyboard_keys"
            android:text="@string/key_u" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/key_v"
