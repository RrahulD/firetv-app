    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35dp"
        android:id="@+id/bottomParent"
        android:layout_marginTop="@dimen/_5dp"
        android:paddingStart="@dimen/_5dp"
        android:paddingEnd="@dimen/_5dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textSize="@dimen/_16sp"
            android:paddingTop="@dimen/_5dp"
            android:paddingBottom="@dimen/_5dp"
            android:paddingStart="@dimen/_10dp"
            android:paddingEnd="@dimen/_10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@+id/key_space"
            android:background="@drawable/keyboard_btn_selector"
            android:id="@+id/key_space"
            android:text="@string/key_space" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:id="@+id/key_delete"
            android:focusable="true"
            android:padding="@dimen/_4dp"
            android:focusableInTouchMode="true"
            android:layout_marginStart="@dimen/_10dp"
            android:scaleType="fitXY"
            android:background="@drawable/keyboard_btn_selector"
            android:src="@drawable/keyboard_back_key_zoomed" />

    </LinearLayout>
</LinearLayout>
