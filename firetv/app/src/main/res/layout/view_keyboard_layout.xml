        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/key_1"
            style="@style/Keyboard_keys"
            android:text="@string/key_1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/key_2"
            style="@style/Keyboard_keys"
            android:text="@string/key_2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/key_3"
            style="@style/Keyboard_keys"
            android:text="@string/key_3" />

