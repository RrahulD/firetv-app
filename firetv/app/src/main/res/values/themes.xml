<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DishOnStream2" parent="Theme.Leanback">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_primary_color</item>
        <item name="colorPrimaryVariant">@color/brand_secondary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_800</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/splash_background_color</item>
    </style>

    <style name="DishSplashProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/white</item>
    </style>

    <style name="Theme.Main" parent="Theme.Leanback">
        <item name="android:windowBackground">@color/brand_primary_color</item>
    </style>

    <style name="Dialog" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="ChannelEPG" parent="Theme.Leanback">
        <item name="backgroundColor">@color/brand_primary_color</item>
    </style>

    <style name="Keyboard_keys" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/_30dp</item>
        <item name="android:layout_height">@dimen/_35dp</item>
        <item name="android:layout_marginEnd">@dimen/_5dp</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:paddingBottom">@dimen/_5dp</item>
        <item name="android:background">@drawable/keyboard_btn_selector</item>
    </style>

    <style name="Keyboard_number_keys" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/_30dp</item>
        <item name="android:layout_height">@dimen/_40dp</item>
        <item name="android:layout_marginEnd">@dimen/_5dp</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:paddingBottom">@dimen/_5dp</item>
        <item name="android:background">@drawable/keyboard_btn_selector</item>
    </style>

</resources>